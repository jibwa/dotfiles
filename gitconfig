[user]
	name = Wade Tandy
	email = wtandy@bloomberg.net

[color]
	grep = auto
	branch = auto
	diff = auto
	status = auto

[diff]
	renames = true

[alias]
	st = status
	d = diff
	co = checkout
	b = branch
	pr = pull --rebase
	ls = log --graph --color --pretty=\"format:%C(yellow)%h%Creset%C(green)%d%Creset %s %Cblue[%aN]%Creset %C(magenta){%cr}%Creset\"
	la = log --graph --color --pretty=\"format:%C(yellow)%h%Creset%C(green)%d%Creset %s %Cblue[%aN]%Creset %C(magenta){%cr}%Creset\" --all

[grep]
	lineNumber = true

[url "https://github.com/"]
	insteadOf = git://github.com/

[url "ssh://git@github.dev.bloomberg.com/"]
	insteadOf = git://github.dev.bloomberg.com

[http]
	sslVerify = false

[credential]
	helper = osxkeychain

[hub]
	host = github.dev.bloomberg.com
	protocol = https
